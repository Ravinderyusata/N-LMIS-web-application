<hibernate-configuration>
 

	<session-factory>

		<!-- MYSQL Database connection settings -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		  <!--  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/vertical</property>   -->
		    <property name="hibernate.connection.url">jdbc:mysql://69.64.71.204:3306/vertical</property>   

		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">Chai@2016</property>
		<property name="hibernate.show_sql">true</property>

		<!-- JDBC connection pool (use the built-in) -->
		 <property name="hibernate.dbcp.initialSize">8</property>
  <property name="hibernate.dbcp.maxTotal">100</property>
  <property name="hibernate.dbcp.maxIdle">20</property>
  <property name="hibernate.dbcp.minIdle">0</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>
   
		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		
		<!-- <property name="hbm2ddl.auto">validate</property> for stop shema validator -->

